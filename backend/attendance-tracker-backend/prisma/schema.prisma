generator client {
  provider = "prisma-client"
  // Note: Prisma 7 often requires a custom output path 
  // if you encounter "module not found" errors
  output   = "../src/generated/prisma" 
  moduleFormat = "esm"  
}

datasource db {
  provider = "postgresql"
  
}

model User {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  name        String
  attendances Attendance[]
  password    String
  createdAt   DateTime     @default(now())
}

model Attendance {
  id        Int      @id @default(autoincrement())
  date      DateTime
  isPresent Boolean
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}